<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mctpay.merchant.mapper.member.MemberMapper">

    <sql id="Base_Column_List">
        id, nickname, phone_number, email, remark, status, create_time, update_time</sql>

    <select id="get" resultType="com.mctpay.merchant.model.entity.member.MemberEntity">
        select
        <include refid="Base_Column_List"/>
        from merchant_user where id = #{value}
    </select>

    <!-- 查询会员信息（商户用户信息） -->
    <select id="listMemberByInput" resultType="com.mctpay.merchant.model.entity.member.MemberEntity">
        SELECT
        t0.*, t1.point point
        FROM (SELECT id, nickname, phone_number, email, remark, status, create_time,update_time
        FROM merchant_user
        <if test="inputContent != null and inputContent != ''">
        WHERE
        nickname LIKE CONCAT('%', #{inputContent}, '%')
        OR email LIKE CONCAT('%', #{inputContent}, '%')
        OR phone_number LIKE CONCAT('%', #{inputContent}, '%')
        </if>
        <!-- 积分规则 -->
        ) t0, manager_summary_point t1, mct_merchant_member t2
        WHERE
        t2.status != 0
        AND t0.status != 0
        AND t1.status != 0
        AND t0.id = t1.user_id
        AND t2.member_id = t0.id
        AND t2.merchant_id = #{merchantId}
    </select>

    <sql id="where">
        <where>
            <include refid="baseWhere"></include>
        </where>
    </sql>

    <sql id="baseWhere">
        <if test="id != null">
            and id = #{id}
        </if>
        <if test="username != null">
            and username = #{username}
        </if>
        <if test="nickname != null">
            and nickname = #{nickname}
        </if>
        <if test="password != null">
            and password = #{password}
        </if>
        <if test="gender != null">
            and gender = #{gender}
        </if>
        <if test="phoneNumber != null">
            and phone_number = #{phoneNumber}
        </if>
        <if test="email != null">
            and email = #{email}
        </if>
        <if test="remark != null">
            and remark = #{remark}
        </if>
        <if test="status != null">
            and status = #{status}
        </if>
        <if test="createTime != null">
            and create_time = #{createTime}
        </if>
        <if test="updateTime != null">
            and update_time = #{updateTime}
        </if>
    </sql>
</mapper>